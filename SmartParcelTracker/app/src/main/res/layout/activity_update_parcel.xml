<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Parcel Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Parcel Status"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <!-- Tracking Number Input -->
        <EditText
            android:id="@+id/trackingNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tracking Number"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- New Status Input -->
        <EditText
            android:id="@+id/statusInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Status"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:inputType="text"
            android:layout_marginBottom="24dp" />

        <!-- Update Parcel Button -->
        <Button
            android:id="@+id/updateParcelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Parcel"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
